    <children>
        <Pane layoutX="51.0" layoutY="22.0" prefHeight="246.0" prefWidth="405.0" style="-fx-background-color: #333333;" />

        <Label layoutX="100.0" layoutY="60.0" style="-fx-text-fill: #F4F3EE; -fx-font-weight: bold;" text="Gebruikersnaam:" />
